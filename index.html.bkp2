<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Saúde do Homem - Quiz</title>
  <link rel="stylesheet" href="css/style.css">
</head>
<body>

<div id="app">

  <!-- TELA INICIAL -->
  <section id="start" class="screen active">
    <img src="assets/doctor-normal.png" class="doctor">
    <h1>Saúde do Homem</h1>
    <p>Teste seus conhecimentos e cuide melhor da sua saúde!</p>
    <button onclick="startQuiz()">Começar Quiz</button>
  </section>

  <!-- QUIZ -->
  <section id="quiz" class="screen">
    <img id="doctorImg" src="assets/doctor-normal.png" class="doctor">

    <div class="question-box">
      <h2 id="questionText"></h2>

      <div class="buttons">
        <button onclick="answer(true)">✔ Verdadeiro</button>
        <button onclick="answer(false)">✖ Falso</button>
      </div>
    </div>
  </section>

  <!-- FINAL -->
  <section id="end" class="screen">
    <img src="assets/doctor-final.png" class="doctor">
    <h2 id="scoreText"></h2>
    <button onclick="restart()">Refazer Quiz</button>
  </section>

</div>

<script src="js/script.js"></script>
</body>
</html>
